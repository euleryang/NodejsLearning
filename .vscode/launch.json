    "version": "0.2.0",
    "configurations": [
        {
          "name": "ts node server",
          "type": "node",
          "request": "launch",
          "runtimeArgs": [
            "-r",
            "ts-node/register"
          ],
          "sourceMaps": true,
          "args": [
            "-r",
            "tsconfig-paths/register",
            "${workspaceRoot}/src/parser.ts",
          ],
          "env": {
            "TS_NODE_FILES": true,
            "TS_NODE_PROJECT": "${workspaceRoot}/src/tsconfig.json"
          },
          "cwd": "${workspaceRoot}",
          "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}