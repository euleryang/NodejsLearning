{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TypeScript in Node.js",
        "preLaunchTask": "typescript",
        "program": "${workspaceFolder}/server.ts",
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "runtimeExecutable": "nodemon", // 或者 node-dev
        "restart": true,
        "console": "integratedTerminal",
        "outFiles": [
          "${workspaceFolder}/build/*.js"
        ]
      }
    ]
  }